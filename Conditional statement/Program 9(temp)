#include<stdio.h>
int main()
{
  float temp;
  printf("Input the temperature in centigrade\n");
  scanf("%.2f",&temp);
  if(temp<0)
  {
      printf("snowfall Area weather\n");
  }      
  else if(temp<10)
    {
        printf("Very Cold weather\n");
    }
  else if(temp<20)
    {
        printf("Cold weather\n");
        
    }
  else if (temp<30)
    {
        printf("Normal in temperature\n");
        
    }
  else if (temp<40)
    {
        printf("Hot weather\n");
    }
  else
    {
        printf("Very Hot weather\n");
    }
    return 0;
}
